<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:utility="clr-namespace:SoDotCash.Utility"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:datavis="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
             xmlns:charting="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
             xmlns:models="clr-namespace:SoDotCash.Models"
             xmlns:primitives="clr-namespace:System.Windows.Controls.DataVisualization.Charting.Primitives;assembly=System.Windows.Controls.DataVisualization.Toolkit"
             x:Class="SoDotCash.Views.AccountsView"
             mc:Ignorable="d"
             Height="350" Width="950"
             DataContext="{Binding Accounts, Source={StaticResource Locator}}"
             >
    <Grid>
        <Grid.Resources>
            <Style x:Key="DateTimeAxisLabelStyle" TargetType="{x:Type charting:DateTimeAxisLabel}">
                <Setter Property="IsTabStop" Value="False" />
                <Setter Property="StringFormat" Value="{}{0:MMM d}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type charting:DateTimeAxisLabel}">
                            <TextBlock Text="{TemplateBinding FormattedContent}" FontSize="10"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid Grid.Column="0" Margin="10,5,752,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Content="Accounts" HorizontalAlignment="Center" Margin="10,0,120,0" />
            <Button Grid.Row="0" x:Name="AddAccount" Content="Add Account" HorizontalAlignment="Left" Margin="103,3,0,0" VerticalAlignment="Top" Width="75" Command="{Binding AddAccountCommand}"/>

            <TreeView Grid.Row="1" Margin="10,0,10,10" ItemsSource="{Binding AccountsView}">
                <i:Interaction.Behaviors>
                    <utility:BindableSelectedItemBehavior SelectedItem="{Binding SelectedAccount, Mode=TwoWay}"/>
                </i:Interaction.Behaviors>
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="HasItems" Value="True">
                                <Setter Property="Focusable" Value="False" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Value}">
                        <TextBlock Text="{Binding Key}" />
                        <HierarchicalDataTemplate.ItemTemplate>
                            <DataTemplate DataType="models:Account">
                                <TextBlock Text="{Binding AccountName}"/>
                            </DataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

        </Grid>
        <TabControl x:Name="TabControl" HorizontalAlignment="Left" Margin="206,5,10,21" VerticalAlignment="Top" SelectedIndex="{Binding ActiveTabIndexAsInt}">
            <TabItem Header="Overview" IsEnabled="{Binding HasSelectedAccount}">
                <Grid  Width="730" Height="300">
                    <StackPanel Orientation="Vertical">
                        <DockPanel>
                            <Grid Width="180" DockPanel.Dock="Left">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="High Balance:"/>
                                        <TextBlock Text="$0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Low Balance:"/>
                                        <TextBlock Text="$0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Average Balance:"/>
                                        <TextBlock Text="$0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <charting:Chart x:Name="Chart" Width="550" Height="130" DockPanel.Dock="Right">
                                <charting:Chart.LegendStyle>
                                    <Style TargetType="datavis:Legend">
                                        <Setter Property="Width" Value="0" />
                                    </Style>
                                </charting:Chart.LegendStyle>
                                <charting:LineSeries ItemsSource="{Binding SummaryTransactions}"
									DependentValueBinding="{Binding LocalizedBalance}"
									IndependentValuePath="Date"
									Title="Historical Balance"
                                    IsSelectionEnabled="True">
                                    <charting:LineSeries.IndependentAxis>
                                        <charting:DateTimeAxis Orientation="X"
                                            ShowGridLines="True"
                                            AxisLabelStyle="{StaticResource DateTimeAxisLabelStyle}"/>
                                    </charting:LineSeries.IndependentAxis>
                                </charting:LineSeries>
                                <charting:Chart.Template>
                                    <ControlTemplate TargetType="charting:Chart">
                                        <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}">
                                            <Grid>
                                                <primitives:EdgePanel x:Name="ChartArea" Style="{TemplateBinding ChartAreaStyle}">
                                                    <Grid Canvas.ZIndex="-1" Style="{TemplateBinding PlotAreaStyle}" />
                                                    <Border Canvas.ZIndex="10" BorderBrush="#FF919191" BorderThickness="1" />
                                                </primitives:EdgePanel>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </charting:Chart.Template>
                            </charting:Chart>
                        </DockPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Ledger" IsEnabled="{Binding HasSelectedAccount}">
                <Grid  Width="730" Height="300">
                    <Grid.Resources>
                        <FrameworkElement x:Key="ProxyElement" DataContext="{Binding}"/>
                    </Grid.Resources>

                    <ContentControl Visibility="Collapsed" Content="{StaticResource ProxyElement}"/>

                    <DataGrid x:Name="DatagridTransactions" ItemsSource="{Binding Transactions}" CanUserAddRows="{Binding IsManualAccount}" SelectionUnit="FullRow" SelectionMode="Single"
						CanUserDeleteRows="{Binding IsManualAccount}" AutoGenerateColumns="False" SelectedItem="{Binding SelectedTransaction, Mode=TwoWay}"
						AlternatingRowBackground="Beige">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=\{0:d\}, UpdateSourceTrigger=PropertyChanged}" Width="70"
								IsReadOnly="{Binding DataContext.IsManualAccount, Converter={StaticResource BoolToInverseBoolConverter}, Source={StaticResource ProxyElement}}"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Width="200"
								IsReadOnly="{Binding DataContext.IsManualAccount, Converter={StaticResource BoolToInverseBoolConverter}, Source={StaticResource ProxyElement}}"/>
                            <DataGridTextColumn Header="Transaction ID" Binding="{Binding FiTransactionId, UpdateSourceTrigger=PropertyChanged}" Width="200" 
								IsReadOnly="{Binding DataContext.IsManualAccount, Converter={StaticResource BoolToInverseBoolConverter}, Source={StaticResource ProxyElement}}"/>
                            <DataGridTextColumn Header="CategoryName" Binding="{Binding CategoryName, UpdateSourceTrigger=PropertyChanged}" Width="80" />
                            <DataGridTextColumn Header="Amount" Binding="{Binding LocalizedAmount, StringFormat=\{0:C2\}, UpdateSourceTrigger=PropertyChanged}" Width="70" 
								IsReadOnly="{Binding DataContext.IsManualAccount, Converter={StaticResource BoolToInverseBoolConverter}, Source={StaticResource ProxyElement}}" CellStyle="{StaticResource Balanace}" />
                            <DataGridTextColumn Header="Balance" Binding="{Binding LocalizedBalance, StringFormat=\{0:C2\}}" Width="80" IsReadOnly="True"  />
                        </DataGrid.Columns>
                        <DataGrid.InputBindings>
                            <KeyBinding Key="Delete" Command="{Binding DeleteTransactionCommand}" />
                        </DataGrid.InputBindings>


                        <!--<DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <Trigger Property="AlternationIndex" Value="0">
                                        <Setter Property="Background" Value="White" />
                                    </Trigger>
                                    <Trigger Property="AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="WhiteSmoke"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>-->

                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Import" IsEnabled="{Binding HasSelectedAccount}">
                <Grid  Width="730" Height="300">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="This section allows you to import transactions from an OFX/QFX file. If this account is linked with a supported online financial institution, you may also download transactions." TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="ButtonImportTransactions" Content="Import Transactions" HorizontalAlignment="Left" VerticalAlignment="Top" Width="149" Command="{Binding ImportTransactionsCommand}" />
                            <Button x:Name="ButtonDownloadTransactions" Content="Download Transactions" HorizontalAlignment="Left" VerticalAlignment="Top" Width="149" Command="{Binding DownloadTransactionsCommand}" Margin="20,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Configuration" IsEnabled="{Binding HasSelectedAccount}">
                <Grid  Width="730" Height="300">
                    <StackPanel Orientation="Vertical">
                        <GroupBox Header="Overview" Margin="0,10,0,0">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Account Name:"  TextWrapping="Wrap"/>
                                    <TextBox Text="{Binding SelectedAccountName}" Margin="10,0,0,0" Width="300"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Account Type:"  TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding SelectedAccount.AccountType}" Margin="10,0,0,0"  TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Update Mechanism" Margin="0,10,0,0">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Account Update Mechanism:" TextWrapping="Wrap"/>
                                    <TextBlock FontWeight="Bold" Text="Automatic" Margin="10,0,0,0" TextWrapping="Wrap" Visibility="{Binding IsAutomaticAccount, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    <TextBlock FontWeight="Bold" Text="Manual" Margin="10,0,0,0" TextWrapping="Wrap" Visibility="{Binding IsManualAccount, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{Binding IsAutomaticAccount, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Label Content="Financial Institution Login:"/>
                                    <TextBox Text="{Binding FiUserName}" Margin="10,0,0,0" Width="100" Height="20"/>
                                    <Label Content="Password:"/>
                                    <PasswordBox x:Name="PasswordEntry" Margin="10,0,0,0" Width="100" Height="20"/>
                                    <Button Content="Verify and Update" HorizontalAlignment="Left" VerticalAlignment="Top" Width="149" Margin="10,3,0,0" Command="{Binding VerifyAndSaveCredentialsCommand}" CommandParameter="{Binding ElementName=PasswordEntry}" />
                                    <TextBlock FontWeight="Bold" Foreground="RED" Text="FAILED" Margin="10,5,0,0" TextWrapping="Wrap" Visibility="{Binding CredentialsFailed, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    <TextBlock FontWeight="Bold" Foreground="GREEN" Text="SAVED" Margin="10,5,0,0" TextWrapping="Wrap" Visibility="{Binding CredentialsVerified, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{Binding IsAutomaticAccount, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Button Content="Unlink Account" HorizontalAlignment="Left" VerticalAlignment="Top" Width="149" Command="{Binding UnlinkAccountCommand}" />
                                    <TextBlock Text="This will change the account into a manual update account." Margin="10,0,0,0"  TextWrapping="Wrap"/>
                                    <TextBlock FontWeight="Bold" Text="This cannot be undone!" Margin="10,0,0,0"  TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <StackPanel Orientation="Horizontal"/>
                        <GroupBox Header="Account Deletion" Margin="0,10,0,0">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="If you no longer wish to track finances in this account, you may use the button below to permanently remove it from So.Cash."  TextWrapping="Wrap"/>
                                <Button x:Name="ButtonDeleteAccount" Content="Delete Account" HorizontalAlignment="Left" VerticalAlignment="Top" Width="149" Command="{Binding DeleteAccountCommand}" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
