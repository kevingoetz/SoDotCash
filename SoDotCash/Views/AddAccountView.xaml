<UserControl x:Class="SoDotCash.Views.AddAccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoDotCash.Views"
             mc:Ignorable="d"
             Height="350" Width="950"
             DataContext="{Binding AddAccount, Source={StaticResource Locator}}">
    <Grid>
        <Label x:Name="label_AccountType" Content="Account Type" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Width="134"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="162,85,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding AllAccountTypes}" SelectedItem="{Binding SelectedAccountType}"/>
        <Label x:Name="label_AccountName" Content="Account Name" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top" Width="134"/>
        <TextBox x:Name="textBox_AccountName" HorizontalAlignment="Left" Height="23" Margin="162,135,0,0" TextWrapping="Wrap" Text="{Binding AccountName}" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button_Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,249,0,0" VerticalAlignment="Top" Width="208" Height="56" Command="{Binding CancelCommand}"/>
        <Button x:Name="button_Create" Content="Create" HorizontalAlignment="Left" Margin="292,249,0,0" VerticalAlignment="Top" Width="208" Height="56" Command="{Binding CreateAccountCommand}"/>
    </Grid>
</UserControl>
