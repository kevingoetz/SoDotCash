<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="SoDotCash.Views.MainWindow"
        xmlns:viewmodels="clr-namespace:SoDotCash.ViewModels"
        xmlns:local="clr-namespace:SoDotCash.Views"
        mc:Ignorable="d"
        Title="So.Cash" SizeToContent="WidthAndHeight" ResizeMode="NoResize"
        DataContext="{Binding Main, Source={StaticResource Locator}}" 
        >
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:AccountsViewModel}">
            <local:AccountsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AddAccountViewModel}">
            <local:AddAccountView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:TransactionsViewModel}">
            <local:TransactionView/>
        </DataTemplate>

    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding ActiveViewModel}"/>
    </Grid>
</Window>
